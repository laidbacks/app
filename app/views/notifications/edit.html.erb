<div data-controller="notification-edit" data-notification-edit-id-value="<%= params[:id] %>" class="container mx-auto px-4 py-8">
  <div class="notifications-container">
    <h1 class="notification-preferences-title">Edit Notification</h1>
    
    <!-- Error & Success Messages -->
    <div data-notification-edit-target="errorContainer" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"></div>
    <div data-notification-edit-target="successContainer" class="hidden bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4"></div>
    
    <!-- Loading state -->
    <div data-notification-edit-target="loading" class="text-center py-4">
      <div class="inline-block animate-spin rounded-full h-8 w-8 border-t-2 border-b-2 border-blue-500"></div>
      <p class="mt-2 text-gray-600">Loading notification...</p>
    </div>
    
    <!-- Edit Form -->
    <form data-notification-edit-target="form" data-action="submit->notification-edit#updateNotification" class="notification-preferences-form hidden">
      <div class="notification-type-group w-full">
        <div class="notification-option">
          <label for="title">Title</label>
          <input type="text" data-notification-edit-target="titleInput" name="title" id="title" class="form-input">
        </div>
        
        <div class="notification-option">
          <label for="body">Message</label>
          <textarea data-notification-edit-target="bodyInput" name="body" id="body" rows="4" class="form-input"></textarea>
        </div>
        
        <div class="notification-option">
          <label for="notification_type">Notification Type</label>
          <select data-notification-edit-target="typeInput" name="notification_type" id="notification_type" class="form-select">
            <option value="email">Email</option>
            <option value="push">Push</option>
            <option value="sms">SMS</option>
          </select>
        </div>
      </div>
      
      <div class="flex justify-between mt-4">
        <button type="submit" class="save-preferences-btn">Update Notification</button>
        <button type="button" data-action="click->notification-edit#cancelEdit" class="bg-gray-300 text-gray-700 px-4 py-2 rounded">Cancel</button>
      </div>
    </form>
  </div>
</div> 