<div class="container py-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card settings-card">
        <div class="card-header">
          <h4 class="mb-0">Change Password</h4>
        </div>
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert-container alert-danger mb-4">
              <%= flash[:alert] %>
            </div>
          <% end %>
          
          <%= form_with url: password_path, method: :patch, class: "profile-form" do |form| %>
            <div class="form-group">
              <%= form.label :current_password, "Current Password", class: "form-label" %>
              <%= form.password_field :current_password, class: "form-input", required: true %>
              <div class="form-hint">Enter your current password for security</div>
            </div>
            
            <div class="form-group">
              <%= form.label :password, "New Password", class: "form-label" %>
              <%= form.password_field :password, class: "form-input", required: true, minlength: 6 %>
              <div class="form-hint">Minimum 6 characters</div>
            </div>
            
            <div class="form-group">
              <%= form.label :password_confirmation, "Confirm New Password", class: "form-label" %>
              <%= form.password_field :password_confirmation, class: "form-input", required: true %>
              <div class="form-hint">Repeat your new password</div>
            </div>
            
            <div class="d-flex mt-4">
              <%= form.submit "Update Password", class: "btn settings-save-btn" %>
              <%= link_to "Cancel", settings_path, class: "btn btn-light ms-2" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= stylesheet_link_tag "settings", "data-turbo-track": "reload" %> 