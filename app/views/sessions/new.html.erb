<div class="container">
  <h1>Log In</h1>

  <% if flash[:alert] %>
    <div class="error-message">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with(url: login_path, local: true) do |form| %>
    <div class="field">
      <%= form.label :username %>
      <%= form.text_field :username, required: true, placeholder: "Enter your username" %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, placeholder: "Enter your password" %>
    </div>

    <div class="actions">
      <%= form.submit "Log In" %>
    </div>
  <% end %>

  <div class="links">
    Don't have an account yet? <%= link_to "Sign up", signup_path %>
  </div>
</div>

<style>
  .container {
    max-width: 500px;
    margin: 3rem auto;
    padding: 2rem;
    background-color: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  h1 {
    margin-bottom: 2rem;
    color: #333;
    text-align: center;
  }

  .error-message {
    background-color: #ffebee;
    color: #d32f2f;
    padding: 1rem;
    border-radius: 6px;
    margin-bottom: 1.5rem;
  }

  .field {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: #555;
    font-weight: 500;
  }

  input[type="text"],
  input[type="password"] {
    width: 100%;
    padding: 0.8rem;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }

  input[type="text"]:focus,
  input[type="password"]:focus {
    border-color: #6e8efb;
    outline: none;
    box-shadow: 0 0 0 2px rgba(110, 142, 251, 0.2);
  }

  .actions {
    margin-top: 2rem;
  }

  input[type="submit"] {
    background: linear-gradient(135deg, #6e8efb, #a777e3);
    color: white;
    border: none;
    padding: 1rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1rem;
    width: 100%;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  input[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(110, 142, 251, 0.4);
  }

  .links {
    margin-top: 2rem;
    text-align: center;
    color: #666;
  }

  .links a {
    color: #6e8efb;
    text-decoration: none;
    font-weight: 500;
  }

  .links a:hover {
    text-decoration: underline;
  }
</style> 