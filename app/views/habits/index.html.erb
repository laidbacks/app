    }
    
    .habit-cards-grid {
      grid-template-columns: 1fr;
    }
    
    .stats-container {
      grid-template-columns: 1fr;
    }
    
    .habit-actions {
      flex-direction: column;
    }
    
    .toggle-habit-btn, .view-details-btn button, .edit-habit-btn, .delete-habit-btn {
