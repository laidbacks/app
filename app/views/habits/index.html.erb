    background-color: #3b82f6;
    color: white;
    border: none;
    display: inline-block;
    text-decoration: none;
  }
  
  .delete-habit-btn {
    background-color: #ef4444;
    color: white;
    border: none;
  }
  
  /* Calendar styles */
  .habit-calendar {
    display: flex;
    justify-content: space-between;
    margin-top: 1rem;
  }
  
  .day-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }
  
  .day-label {
    font-size: 0.75rem;
    color: #6b7280;
  }
  
  .day-marker {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background-color: #e5e7eb;
  }
  
