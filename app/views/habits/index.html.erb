    background-color: #10b981;
  }
  
  .day-marker.today {
    background-color: #f59e0b;
  }
  
  /* Stats container styles */
  .stats-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-top: 1rem;
  }
  
  .stat-card {
    background-color: #f9fafb;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
  }
  
  .stat-card h3 {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0 0 0.5rem 0;
    font-weight: 500;
  }
  
  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #3b82f6;
  }
  
  .stat-label {
    font-size: 0.75rem;
    color: #6b7280;
    margin-top: 0.25rem;
  }
  
  /* Tips section styles */
  .tip-card {
    background-color: #f9fafb;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
  }
  
  .tip-card h3 {
